{% extends '::base.html.twig' %}

{% block body %}
    <h1>Partido de la liga</h1>

    <div class="contenedor-ligas container col-lg-12 col-md-12 col-sm-12 col-xs-12"
            style="background-color: white; padding: 10px; ">

        <div class="profile-body">

            {% for partido in ronda.partidos %}
            <div class=" col-lg-3 col-md-3 col-sm-3 col-xs-3"
                 style=" margin-right: 8%; margin-bottom: 5%; min-height: 200px; background-color: rgba(169, 245, 242, 0.26);border: 2px solid rgba(0, 0, 0, 0.3); border-radius: 10px;">

                <div class="col-lg-12 col-md-11 col-sm-11 col-xs-11"  style=" margin-bottom: 1%; padding: 1px; "><h2>{{ partido.name }}</h2></div>
                <div class="col-lg-12 col-md-11 col-sm-11 col-xs-11"  style=" margin-bottom: 1%; padding: 1px; "><h2>{{ partido.id }}</h2></div>
                <div class="col-lg-1 col-md-1 col-sm-1 col-xs-1"><a style="" href="{{ path('app_partido_updatePartido',{'id': partido.id},{'slug': ronda.id}) }}"> ✏️️ </a></div>
                <div class="col-lg-1 col-md-1 col-sm-1 col-xs-1"><a style="" href="{{ path('app_partido_removePartido',{'id': partido.id}) }}"> ✖️ </a></div>
                <div class="boton-detalles"><a href="{{ path('app_partido_play',{'id': partido.id},{'slug': ronda.id}) }}"><button class="btn btn-primary" > ↪️️ Resultados</button></a></div>
                <div class="col-lg-12 col-md-11 col-sm-11 col-xs-11"  style=" margin-bottom: 1%; padding: 1px; "><h4>{{ partido.firstTeam }}</h4></div>
                <div class="col-lg-12 col-md-11 col-sm-11 col-xs-11"  style=" margin-bottom: 1%; padding: 1px; "><h6>{{ partido.firstResult }}</h6></div>
                <div class="col-lg-12 col-md-11 col-sm-11 col-xs-11"  style=" margin-bottom: 1%; padding: 1px; "><h4>{{ partido.secondTeam }}</h4></div>
                <div class="col-lg-12 col-md-11 col-sm-11 col-xs-11"  style=" margin-bottom: 1%; padding: 1px; "><h6>{{ partido.secondResult }}</h6></div>
                <div class="col-lg-12 col-md-11 col-sm-11 col-xs-11"  style=" margin-bottom: 1%; padding: 1px; "><h6>{{ partido.winner }}</h6></div>




            </div>

    {% endfor %}

        </div>

    </div>

    <div style="margin-top: 10px">
        <a href="{{ path('app_partido_insertPartido',{'id': ronda.id}) }}">New Partido</a>
    </div>

{% endblock %}