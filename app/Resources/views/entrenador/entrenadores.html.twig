
{% extends '::base.html.twig' %}

{% block body %}
    <h1>All Entrenadores</h1>
    {% for equipo in liga.equipos %}
        {% for entrenador in equipo.entrenadores %}
    <div class=" col-lg-12 col-md-12 col-sm-12 col-xs-12"
         style="margin-bottom: 1%; background-color: rgba(169, 245, 242, 0.26);border: 2px solid rgba(0, 0, 0, 0.3); border-radius: 10px;">
        <div class="col-lg-11 col-md-11 col-sm-11 col-xs-11"  style=" margin-bottom: 1%; padding: 1px; ">
            <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12" ><h4>Nombre: </h4> </div>
            <div class="col-lg-8 col-md-9 col-sm-12 col-xs-12" style="height: 40px; text-align: center;"> <h4>{{ entrenador.nombre }}</h4></div>
            <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12" style=""><h4>Description:</h4> </div>
            <div class="col-lg-8 col-md-8 col-sm-12 col-xs-12" style="min-height: 30px; margin-top: 10px;">{{ entrenador.texto }}</div>
        </div>
        <div class="col-lg-1 col-md-1 col-sm-1 col-xs-1" style="">
                <div class="col-lg-1 col-md-1 col-sm-1 col-xs-1"><a style="" href="{{ path('app_entrenador_updateEntrenador',{'id': entrenador.id}) }}"> ✏️️ </a></div>
                <div class="col-lg-1 col-md-1 col-sm-1 col-xs-1"><a style="" href="{{ path('app_entrenador_removeEntrenador',{'id': entrenador.id}) }}"> ✖️ </a></div>
        </div>
    </div>
        {% endfor %}
    {% endfor %}
{% endblock %}