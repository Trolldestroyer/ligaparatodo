{% extends '::base.html.twig' %}

{% block body %}
    <h1>Players</h1>

    <div class="contenedor-ligas container col-lg-12 col-md-12 col-sm-12 col-xs-12"
            style="background-color: white; padding: 10px; ">

        <div class="profile-body">
        {% for player in equipo.players %}
            <div class=" col-lg-3 col-md-3 col-sm-3 col-xs-3"
                 style=" margin-right: 8%; margin-bottom: 5%; min-height: 200px; background-color: rgba(169, 245, 242, 0.26);border: 2px solid rgba(0, 0, 0, 0.3); border-radius: 10px;">
                <div class="col-lg-12 col-md-1 col-sm-1 col-xs-1" style="">
                    {% if (app.user == player.creador) or (app.user == "Albert") %}
                        <div class="col-lg-1 col-md-1 col-sm-1 col-xs-1"><a style="" href="{{ path('app_player_removePlayer',{'id': player.id}) }}"> ✖️ </a></div>
                        <div class="col-lg-1 col-md-1 col-sm-1 col-xs-1"><a style="" href="{{ path('app_player_updatePlayer',{'id': player.id},{'slug': equipo.id}) }}"> ✏️️ </a></div>
                    {%   endif %}
                </div>
                <div class="col-lg-12 col-md-11 col-sm-11 col-xs-11"  style=" margin-bottom: 1%; padding: 1px; ">
                    <div class="col-lg-12 col-md-9 col-sm-12 col-xs-12" style="height: 40px; text-align: center; margin-top: 5%;"> <a href="{{ path('app_player_show',{'slug': player.id}) }}"><h4>{{ player.nombre }}</h4></a></div>
                </div>
            </div>

        {% endfor %}
        </div>
    </div>

    <div style="margin-top: 10px">
        <a href="{{ path('app_player_insertPlayer',{'id': equipo.id}) }}">New Player</a>
    </div>

{% endblock %}